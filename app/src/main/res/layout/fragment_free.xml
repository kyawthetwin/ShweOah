<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.freegeek.android.materialbanner.MaterialBanner
        android:id="@+id/material_banner"
        android:layout_width="match_parent"
        app:match="true"
        android:layout_height="200dp"/>

    <TextView
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:layout_below="@id/material_banner"
        android:id="@+id/txt_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Categories"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/f_m_categories"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_categories">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:layout_below="@id/f_m_categories"
        android:id="@+id/txt_toprated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TopRated"/>
</RelativeLayout>
